{
  "extends": "@alleyinteractive/tsconfig/base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "outDir": "build",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
  },
  "exclude": [
    "vendor",
    "node_modules",
    "build/**/*"
  ]
}
